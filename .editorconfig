# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{yml,yaml,xml,hcl,tf}]
indent_size = 2

[*.{bat,cmd,ps1,ps[md]1}]
end_of_line = crlf
